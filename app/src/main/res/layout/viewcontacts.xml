<?xml version="1.0" encoding="utf-8"?>

<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">

    <EditText android:layout_width="200dp" android:layout_height="36dp"
        android:id="@+id/nameTxtV" android:layout_x="32dp" android:layout_y="74dp"
        android:singleLine="true" android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:editable="false" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall" android:text="Name:"
        android:id="@+id/textView" android:layout_x="31dp" android:layout_y="52dp"
        android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="36dp"
        android:id="@+id/lastTxtV" android:layout_x="32dp" android:layout_y="145dp"
        android:singleLine="true" android:background="@android:color/background_dark"
        android:textColor="@android:color/background_light"
        android:editable="false" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall" android:text="Surname:"
        android:id="@+id/textView2" android:layout_x="31dp" android:layout_y="122dp"
        android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="36dp"
        android:id="@+id/homeTxtV" android:layout_x="32dp" android:layout_y="298dp"
        android:singleLine="true" android:background="@android:color/background_dark"
        android:editable="false" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Home Address:" android:id="@+id/textView3" android:layout_x="32dp"
        android:layout_y="273dp" android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="36dp"
        android:id="@+id/cellTxtV" android:layout_x="32dp" android:layout_y="221dp"
        android:singleLine="true" android:textColor="@android:color/background_light"
        android:background="@android:color/background_dark"
        android:editable="false" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Cell Phone Number:" android:id="@+id/textView4" android:layout_x="32dp"
        android:layout_y="194dp" android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="36dp"
        android:id="@+id/emailTxtV" android:layout_x="32dp" android:layout_y="372dp"
        android:singleLine="true" android:textColor="@android:color/background_light"
        android:autoText="false" style="@android:style/TextAppearance.DeviceDefault.Widget.TextView"
        android:background="@android:color/background_dark"
        android:editable="false" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Email Address:" android:id="@+id/textView5" android:layout_x="32dp"
        android:layout_y="347dp" android:textColor="@android:color/background_dark"/>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="View Contact Details:" android:id="@+id/textView6" android:layout_x="96dp"
        android:layout_y="8dp" android:textColor="@android:color/background_dark"/>

    <Button style="@android:style/Widget.DeviceDefault.Button.Inset" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Back" android:id="@+id/viewBckBBtn"
        android:layout_x="3dp" android:layout_y="517dp" android:textColor="@android:color/background_dark"/>

</AbsoluteLayout>