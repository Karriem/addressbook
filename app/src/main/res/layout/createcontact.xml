<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content" android:layout_height="match_parent"
    android:background="@android:color/holo_blue_bright">
    <ScrollView android:layout_width="375dp" android:layout_height="wrap_content">
    <AbsoluteLayout android:layout_width="fill_parent" android:layout_height="fill_parent">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium"
                  android:text="Please enter in the following details:" android:id="@+id/textView6"
                  android:layout_x="24dp" android:layout_y="27dp"
                  android:textColor="@android:color/background_dark"/>

    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/nameTxt" android:layout_x="25dp" android:layout_y="109dp"
        android:singleLine="true" android:textIsSelectable="false"
        android:inputType="text|textCapWords|textPersonName" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall" android:text="Enter Name:"
        android:id="@+id/textView" android:layout_x="27dp" android:layout_y="81dp"
        android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/surnametxt" android:layout_x="25dp" android:layout_y="179dp"
        android:singleLine="true"
        android:inputType="text|textCapWords|textPersonName" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall" android:text="Enter Surname:"
        android:id="@+id/textView2" android:layout_x="27dp" android:layout_y="152dp"
        android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/homeTxt" android:layout_x="27dp" android:layout_y="254dp"
        android:singleLine="true"
        android:inputType="text|textCapWords|textPostalAddress" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Home Address:" android:id="@+id/textView3" android:layout_x="27dp"
        android:layout_y="227dp" android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/cellTxt" android:layout_x="27dp" android:layout_y="325dp"
        android:singleLine="true"
        android:maxLength="10"
        android:numeric="integer"
        android:phoneNumber="true"
        android:inputType="number" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter Cell Phone Number:" android:id="@+id/textView4" android:layout_x="27dp"
        android:layout_y="295dp" android:textColor="@android:color/background_dark"/>
    <EditText android:layout_width="200dp" android:layout_height="wrap_content"
        android:id="@+id/emailTxt" android:layout_x="27dp" android:layout_y="402dp"
        android:singleLine="true"
        android:inputType="textEmailAddress" />
    <TextView android:layout_width="171dp" android:layout_height="51dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Enter E-mail Address:" android:id="@+id/textView5" android:layout_x="27dp"
        android:layout_y="373dp" android:textColor="@android:color/background_dark"/>
    <Button style="@android:style/Widget.Button.Inset" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Back" android:id="@+id/createBackBtn"
        android:layout_x="9dp" android:layout_y="519dp" />
    <Button style="@android:style/Widget.DeviceDefault.Button.Inset" android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:text="Create" android:id="@+id/createBtn"
        android:layout_x="290dp" android:layout_y="517dp" android:textColor="@android:color/background_dark"/>


    </AbsoluteLayout>
    </ScrollView>
</LinearLayout>